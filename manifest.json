{
    "manifest_version": 3,
    "name": "Redirector to ReadPaper",
    "version": "1.0",
    "description": "Redirects to ReadPaper with the ArXiv paper title.",
    "permissions": [
        "contextMenus",
        "activeTab",
        "scripting",
        "tabs"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "host_permissions": [
        "https://arxiv.org/*"
    ],
    "icons": {
        "16": "images/icon16.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png"
    }
}